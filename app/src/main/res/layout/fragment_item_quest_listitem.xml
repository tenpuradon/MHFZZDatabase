<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem"
    style="@style/list_item_dense"
    android:orientation="horizontal" >


    <TextView
        style="@style/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="1dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:text="â˜…" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quest_stars"
            style="@style/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="10"
            android:textColor="@color/text_color"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/quest_name"
            style="@style/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="start|center_vertical"
            android:text="A Crazy Quest"
            android:textColor="@color/text_color"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@id/slot"
            style="@style/text_small_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="left"
            android:text="A" />

        <TextView
            android:id="@id/amount"
            style="@style/text_small_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="24dp"
            android:text="x1" />

        <TextView
            android:id="@+id/percentage"
            style="@style/text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:minWidth="34dp"
            android:text="100%"></TextView>
    </LinearLayout>

